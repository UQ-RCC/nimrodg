{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "hpc_definition_base": {
      "type": "object",
      "properties": {
        "submit": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "delete": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "delete_force": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "regex": { "type": "string" }
      },
      "required": ["submit", "delete", "delete_force", "regex"]
    },
    "hpc_definition": {
      "allOf": [
        { "$ref": "#/definitions/hpc_definition_base" },
        {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "template": { "type": "string" }
              },
              "required": ["template"]
            },
            {
              "type": "object",
              "properties": {
                "template_file": { "type": "string" }
              },
              "required": ["template_file"]
            },
            {
              "type": "object",
              "properties": {
                "template_classpath": { "type": "string" }
              },
              "required": ["template_classpath"]
            }
          ]
        }
      ]
    },
    "hpc_definition_file": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/hpc_definition" }
    }
  },
  "$ref": "#/definitions/hpc_definition_file"
}
