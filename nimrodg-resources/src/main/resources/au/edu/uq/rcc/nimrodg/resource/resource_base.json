{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"definitions": {
		"environment_variable": {
			"type": "string",
			"pattern": "^[A-Za-z_][A-Za-z0-9_+]*$"
		},
		"ssh_resource": {
			"type": "object",
			"properties": {
				"agent_platform": { "type": "string" },
				"transport": {
					"oneOf": [
						{
							"type": "object",
							"properties": {
								"name": { "enum": ["sshd"] },
								"uri": { "type": "string", "format": "uri" },
								"keyfile": { "type": "string" },
								"hostkeys": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": { "type": "string" }
                                }
							},
							"required": ["name", "uri", "keyfile", "hostkeys"]
						},
						{
							"type": "object",
							"properties": {
								"name": { "enum": ["openssh"] },
								"uri": { "type": "string" },
								"keyfile": { "type": "string" },
								"executable": { "type": "string" }
							},
							"required": [
								"name",
								"uri",
								"keyfile",
								"executable"
							]
						},
						{
							"type": "object",
							"properties": {
								"name": { "enum": ["local"] }
							},
							"required": [ "name" ]
						}
					]
				},
				"forwarded_environment": {
					"type": "array",
					"items": { "$ref": "#/definitions/environment_variable"}
				}
			},
			"required": ["agent_platform", "transport", "forwarded_environment"]
		},
		"cluster_resource": {
			"allOf": [
				{ "$ref": "#/definitions/ssh_resource" },
				{
					"type": "object",
					"properties": {
						"limit": { "type": "integer", "minimum": 1 },
						"tmpvar": { "$ref": "#/definitions/environment_variable" },
						"max_batch_size": { "type": "integer", "minimum": 1 }
					},
					"required": ["limit", "tmpvar", "max_batch_size"]
				}
			]
		},
		"hpc_cluster_resource": {
			"allOf": [
				{ "$ref": "#/definitions/cluster_resource" },
				{
					"type": "object",
					"properties": {
						"definition": { "$ref": "cluster/hpc_definition.json#/definitions/hpc_definition_config" },
						"ncpus": { "type": "integer", "minimum": 1},
						"mem": { "type": "integer", "minimum": 1},
						"walltime": { "type": "integer", "minimum": 1},
						"account": { "type": "string" },
						"queue": { "type": "string" },
						"server": { "type": "string" }
					},
					"required": ["definition", "ncpus", "mem", "walltime"]
				}
			]
		}
	}
}
